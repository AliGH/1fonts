fonts_folder = 'fonts/'
fonts_class = true

quote(str)
  unquote("'")+str+unquote("'")

fontface(font)
  @font-face
    font-family quote(font[0])
    font-style: font[3] || normal;
    font-weight: font[4] || 400;
    src url(fonts_folder+font[2]+'.eot')
    src local(font[1]),
        url(fonts_folder+font[2]+'.eot') format('embedded-opentype'),
        url(fonts_folder+font[2]+'.woff') format('woff'),
        url(fonts_folder+font[2]+'.ttf') format('truetype')

for i in fonts_list
  fontface i
  if fonts_class
    {'.'+i[0]}
      font-family i[1], i[0], Verdana, Geneva, sans-serif
